<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.anita.kalkulatordiskon.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga Asli"
        android:layout_marginBottom="12dp"    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editHargaAsli"
        android:layout_marginBottom="12dp"     />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Diskon (%)"
        android:layout_marginBottom="12dp"    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editDiskon"
        android:layout_marginBottom="12dp"  />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHitung"
        android:layout_marginBottom="12dp"
        android:text="Hitung"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga setelah Diskon"
        android:id="@+id/tvHargaDiskon"
        android:layout_marginBottom="12dp"      />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hemat"
        android:id="@+id/tvHemat" />



</LinearLayout>
